# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True

# Email Configuration (for password reset)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Todo App <noreply@todoapp.com>

# For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" 
# 3. Use the app password (not your regular password)

# Other popular email providers:
# Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587

# Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587

# For development, leave EMAIL_HOST_USER empty to use console backend
# EMAIL_HOST_USER=

# Supabase Database Configuration
# Get these from: Supabase Dashboard > Settings > Database
SUPABASE_DB_HOST=your-project-ref.supabase.co
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_DB_PORT=5432

# Alternative: Use DATABASE_URL format (recommended for deployment)
# DATABASE_URL=postgresql://postgres:password@your-project-ref.supabase.co:5432/postgres
